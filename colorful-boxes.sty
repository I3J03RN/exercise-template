\tcbset{sidestrokebox/.style={ %
    enhanced,
    left=1mm,
    right=2mm,
    top=0mm,
    middle=0mm,
    bottom=0mm,
    toprule=0mm,
    titlerule=0mm,
    bottomrule=0mm,
    boxsep=5pt,
    frame hidden,
    fonttitle=\sffamily\bfseries,
    sharp corners=west,
    breakable,
    break at=-\baselineskip/0pt,
    coltitle=#1!80!black,
    colbacktitle=black!5!white,
    borderline west={4pt}{0pt}{#1},
  }}

\newtcbtheorem[crefname={\GetTranslation{lemma}}{\GetTranslation{lemmata}},Crefname={\GetTranslation{Lemma}}{\GetTranslation{Lemmata}}]{lemma}{\GetTranslation{Lemma}}{ %
  sidestrokebox={teal},
  fontupper=\itshape,
  lower separated=false,
  before lower*={\begin{proof}\renewcommand\qedsymbol{\rotatebox[origin=c]{45}{$\textcolor{teal!80!white}{\blacksquare}$}}},
  after lower*={\vspace{2mm}\end{proof}}
}{lem}

\newtcbtheorem[crefname={\GetTranslation{theorem}}{\GetTranslation{theorems}},Crefname={\GetTranslation{Theorem}}{\GetTranslation{Theorems}}]{theorem}{\GetTranslation{Theorem}}{ %
  sidestrokebox={blue},
  fontupper=\itshape,
  lower separated=false,
  before lower*={\begin{proof}\renewcommand\qedsymbol{\rotatebox[origin=c]{45}{$\textcolor{blue!80!white}{\blacksquare}$}}},
  after lower*={\vspace{2mm}\end{proof}}
}{thm}

\newtcbtheorem[crefname={\GetTranslation{corollary}}{\GetTranslation{corollaries}},Crefname={\GetTranslation{Corollary}}{\GetTranslation{Corollaries}}]{corollary}{\GetTranslation{Corollary}}{
 %
  sidestrokebox={pink},
  fontupper=\itshape,
  lower separated=false,
  before 
  lower*={\begin{proof}\renewcommand\qedsymbol{\rotatebox[origin=c]{45}{$\textcolor{red!80!white}{\blacksquare}$}}},
    after lower*={\vspace{2mm}\end{proof}}
}{corr}

\DeclareTColorBox[
  auto counter,
  crefname={\GetTranslation{def}}{\GetTranslation{defs}},
  Crefname={\GetTranslation{Def}}{\GetTranslation{Defs}}]
  {definition}{mmo}{ %
    sidestrokebox={darkgray},
    title=\GetTranslation{Def} \thetcbcounter\notblank{#1}{: #1}{},
    label=def:\ifblank{#2}{\thetcbcounter}{#2},
    IfValueT={#3}{overlay first={
        \node[anchor=north east, inner sep=5pt, align=flush right,
        text width=1.8cm] at (title.north west) {\vphantom{Ag}#3};
      }}
  }

\DeclareTCBListing[auto counter,crefname={\GetTranslation{lst}}{\GetTranslation{lsts}},Crefname={\GetTranslation{Lst}}{\GetTranslation{Lsts}}]{listingbox}{mm}{ %
  sidestrokebox={brown},
  listing only,
  title=\GetTranslation{Lst} \thetcbcounter\notblank{#1}{: #1}{},
  label=lst:\ifblank{#2}{\thetcbcounter}{#2} }

\DeclareTColorBox[auto counter,crefname={\GetTranslation{algorithm}}{\GetTranslation{algorithms}},Crefname={\GetTranslation{Algorithm}}{\GetTranslation{Algorithms}}]{algorithmbox}{mm!O{}}{ %
  sidestrokebox={violet},
  title=\GetTranslation{Algorithm} \thetcbcounter\notblank{#1}{: #1}{},
  label=alg:\ifblank{#2}{\thetcbcounter}{#2},
  before upper*={\begin{algorithm}[H]},
  after upper*={\end{algorithm}},
  #3
}